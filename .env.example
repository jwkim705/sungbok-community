# Database Configuration
POSTGRES_USER=admin
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB=sungbok
DB_URL=jdbc:postgresql://localhost:5432/sungbok

# Valkey/Redis Configuration
VALKEY_PASSWORD=your_valkey_password_here

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=your_email@example.com
PGADMIN_DEFAULT_PASSWORD=your_pgadmin_password_here

# JWT Keys Configuration
# 보안을 위해 실제 키 파일은 Git에 포함되지 않습니다.
# 로컬 개발: src/main/resources/keys/ 경로에 키 파일 생성 필요
# 프로덕션: 절대 경로 또는 외부 키 관리 시스템 사용 (AWS Secrets Manager, HashiCorp Vault 등)
JWT_PRIVATE_KEY_PATH=classpath:keys/jwt-private.pem
JWT_PUBLIC_KEY_PATH=classpath:keys/jwt-public.pem

# OAuth2 Client Credentials
# Google OAuth2
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Kakao OAuth2
KAKAO_CLIENT_ID=your_kakao_client_id_here
KAKAO_CLIENT_SECRET=your_kakao_client_secret_here

# Naver OAuth2
NAVER_CLIENT_ID=your_naver_client_id_here
NAVER_CLIENT_SECRET=your_naver_client_secret_here
